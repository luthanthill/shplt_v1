<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
	    <%= form_for(:session, url: sessions_path) do |f| %>

	      <%= f.label :email %>
	      <%= f.text_field :email %>

	      <%= f.label :password %>
	      <%= f.password_field :password %>

	      <div class="col-md-4 col-md-offset-4">
	      	<%= f.submit "Sign in", class: "btn btn-large btn-danger" %>
	      </div>
	    <% end %>
  	</div>
  </div>
  
  <div class="sign-in">
  	<small>
  		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
  	</small>
  </div>

</div>